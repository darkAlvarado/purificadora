<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context=".View.Vender">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="@drawable/gradiente">
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/cliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vender"
                    android:textSize="@dimen/titulo"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/green"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/nombre_cliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="José Atila Alvarado Alvarado"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f2f2f2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Precio "
                            android:textColor="@color/black"
                            android:textSize="@dimen/venta"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Cantidad"
                            android:textColor="@color/black"
                            android:textSize="@dimen/venta"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Subtotal"
                            android:textColor="@color/black"
                            android:textSize="@dimen/venta"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/precio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="---"
                            android:textColor="@color/saved"
                            android:textSize="@dimen/formularios" />

                        <TextView
                            android:id="@+id/cantidad"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="---"
                            android:textColor="@color/saved"
                            android:textSize="@dimen/formularios" />

                        <TextView
                            android:id="@+id/subtotal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="---"
                            android:textColor="@color/saved"
                            android:textSize="@dimen/formularios" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@color/tx25"
                            android:gravity="right"
                            android:paddingRight="15dp"
                            android:text="Descuento preferencial"
                            android:textColor="@color/white"
                            android:textSize="@dimen/formularios" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="$ 0.0"
                            android:textColor="@color/saved"
                            android:textSize="@dimen/formularios" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/saved"
                            android:textSize="@dimen/formularios" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/tx1"
                            android:gravity="right"
                            android:paddingRight="15dp"
                            android:text="Total"
                            android:textColor="@color/white"
                            android:textSize="@dimen/formularios" />

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="$ 0.0"
                            android:textColor="@color/saved"
                            android:textSize="@dimen/formularios" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Escribir precio:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/formularios"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_precio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:text="15.50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Elija una opción o escriba una cantidad en la parte de abajo"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx1"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx2"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx3"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx4"
                                android:gravity="center"
                                android:text="4"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx5"
                                android:gravity="center"
                                android:text="5"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx8"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx10"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx10"
                                android:gravity="center"
                                android:text="10"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx12"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx12"
                                android:gravity="center"
                                android:text="12"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx15"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx15"
                                android:gravity="center"
                                android:text="15"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx16"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx16"
                                android:gravity="center"
                                android:text="16"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx18"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx18"
                                android:gravity="center"
                                android:text="18"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx20"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx20"
                                android:gravity="center"
                                android:text="20"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx22"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx22"
                                android:gravity="center"
                                android:text="22"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx24"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx24"
                                android:gravity="center"
                                android:text="24"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tx25"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tx25"
                                android:gravity="center"
                                android:text="25"
                                android:textColor="@color/white"
                                android:textSize="@dimen/titulo"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Escribir cantidad:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/formularios"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_cantidad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Elija el tipo de pago:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/formularios"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/tipoCredito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Credito" />

                    <RadioButton
                        android:id="@+id/tipoContado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Contado" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Cantidad pagada:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/formularios"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pago"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:text="0.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Descuento preferencial:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/formularios"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="Normal" />

                    <RadioButton
                        android:id="@+id/r1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="R1" />

                    <RadioButton
                        android:id="@+id/r2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="R2" />

                    <RadioButton
                        android:id="@+id/r3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="R3" />

                    <RadioButton
                        android:id="@+id/r4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="R4" />

                    <RadioButton
                        android:id="@+id/r5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="R5" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <Button

                    android:id="@+id/btn_vender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/botones"
                    android:lines="1"
                    android:text="Realizar venta"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/btn_cancelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/cancel"
                    android:text="@string/cancelar"
                    android:textColor="#FFF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>






</LinearLayout>